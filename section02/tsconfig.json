{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",

    // strict
    // -> strict 관련 최상위 설정
    "strict": true,

    // strictNullChecks
    // -> 엄격한 null 검사
    // -> null 타입이 아닌 변수에 null 값을 할당하는 것을 허용 할 것인지 말 것인지
    "strictNullChecks": false,

    "moduleDetection": "force"
  },
  "include": ["src"]
}
